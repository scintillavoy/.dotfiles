#!/usr/bin/env bash

SCRIPT_PATH=$0
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
SCRIPT_NAME=$(basename "$SCRIPT_PATH")

# Variables which can be overridden by environment variables.
PROJECT_ROOT_DIR=${PROJECT_ROOT_DIR:-$(git rev-parse --show-toplevel)}
REMOTE_NAME=${REMOTE_NAME:-"origin"}
BRANCH_PREFIX=${BRANCH_PREFIX:-"release/"}
TAG_PREFIX=${TAG_PREFIX:-"v"}
BASE_BRANCH_NAME=${BASE_BRANCH_NAME:-"development"}

# Command line arguments.
arguments=()
TARGET_VERSION=
FORCE=

show_help() {
  printf "Usage: %s <release-version> [options]\n" "$SCRIPT_NAME"
  printf "\n"
  printf "Options:\n"
  printf "  -f, --force  Push to the remote repository forcefully.\n"
  printf "  -h, --help   Display this help and exit.\n"
  printf "  --           Do not interpret any more arguments as options.\n"
  exit 1
}

while :; do
  case $1 in
    -f|--force)
      FORCE=$1
      ;;
    -h|-\?|--help)
      show_help
      ;;
    --)
      shift
      break
      ;;
    -?*)
      printf "Error: Unknown option '%s'\n" "$1"
      show_help
      ;;
    ?*)
      arguments+=("$1")
      ;;
    *)
      break
  esac
  shift
done

while :; do
  case $1 in
    ?*)
      arguments+=("$1")
      ;;
    *)
      break
  esac
  shift
done

[ ${#arguments[@]} -ne 1 ] && show_help

for argument in "${arguments[@]}"; do
  if [ -z "$TARGET_VERSION" ]; then
    TARGET_VERSION=$argument
  else
    show_help
  fi
done

source "$SCRIPT_DIR/internal"
start
exit $?
